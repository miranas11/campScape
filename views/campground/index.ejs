<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 300px"></div>

<div class="container">
    <h1>All CampGrounds</h1>
    <br />

    <% for (let campground of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= campground.images[0].url %>" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text">
                        <small><%= campground.description %></small>
                    </p>
                    <p class="card-text">
                        <small class="text-muted"
                            ><%= campground.location %></small
                        >
                    </p>
                    <a
                        class="btn btn-primary"
                        href="/campground/<%= campground.id %>"
                        >View <%= campground.title %></a
                    >
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<script>
    const mapAccessToken = "<%- process.env.MAP_BOX_PUBLIC_KEY%>";

    const campground = {
        features: JSON.parse(`<%-JSON.stringify(campgrounds)%>`),
    };
</script>
<script src="/javascript/showClusterMap.js"></script>
